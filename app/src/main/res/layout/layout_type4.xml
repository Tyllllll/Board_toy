<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="5dp"
	android:paddingBottom="5dp">

	<include layout="@layout/base_title" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/news_photo1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:contentDescription="@string/news_photo"
			android:padding="1dp" />

		<ImageView
			android:id="@+id/news_photo2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:contentDescription="@string/news_photo"
			android:padding="1dp" />

		<ImageView
			android:id="@+id/news_photo3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:contentDescription="@string/news_photo"
			android:padding="1dp" />

		<ImageView
			android:id="@+id/news_photo4"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:contentDescription="@string/news_photo"
			android:padding="1dp" />
	</LinearLayout>

	<include layout="@layout/base_author_publish_time" />

<!--	<include layout="@layout/base_line" />-->

</LinearLayout>